<div class="page-header">
  <h3>Flavor #<%= @flavor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Category</dt>
      <dd><%= @flavor.category %></dd>

      <dt>Name</dt>
      <dd><%= @flavor.name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/flavors" class="btn btn-primary">
        Back
      </a>
      <a href="/flavors/<%= @flavor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_flavor/<%= @flavor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
