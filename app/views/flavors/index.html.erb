<div class="page-header">
  <h1>
    Flavors
    <a href="/flavors/new" class="btn btn-lg btn-success">New Flavor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
       <th>Name</th>
       <th>Category</th>
       <th>Actions</th>
     </tr>

     <% @flavors.each do |flavor| %>
     <tr>
     <td><%= flavor.name %></td>
      <td><%= flavor.category %></td>
      <td>
        <a href="/flavors/<%= flavor.id %>" class="btn btn-primary">Show</a>
        <a href="/flavors/<%= flavor.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_flavor/<%= flavor.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
      </td>
    </tr>
    <% end %>
  </table>
</div>
</div>
